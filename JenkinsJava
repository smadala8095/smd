pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                sh 'git clone https://github.com/smadala8095/smd.git smd_project'
            }
        }
        stage('Build Maven') {
            steps {
                dir('smd_project') {
                    sh 'mvn clean package'
                }
            }
        }
        stage('Test') {
            steps {
                dir('smd_project') {
                    sh 'mvn test'
                }
            }
        }
        stage('Compile Java') {
            steps {
                dir('smd_project') {
                    sh 'javac src/main/java/com/example/SimpleJavaApp.java'
                }
            }
        }
        stage('Run Java Application') {
            steps {
                dir('smd_project') {
                    // Correcting the classpath to include the root of the package structure
                    sh 'java -cp src/main/java com.example.SimpleJavaApp'
                }
            }
        }
    }
}
